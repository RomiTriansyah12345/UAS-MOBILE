<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.uasmobile"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UASMOBILE"
        tools:targetApi="31">

        <!-- Jadikan MainActivity sebagai halaman awal -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Daftar" android:exported="false" />
        <activity android:name=".Register" android:exported="false" />
        <activity android:name=".Home" android:exported="false" />
        <activity android:name=".DaftarBukuActivity" android:exported="false" />
        <activity android:name=".CariBukuActivity" android:exported="false" />
        <activity android:name=".ListPinjamActivity" android:exported="false" />
        <activity android:name=".DetailBukuActivity" android:exported="false" />

    </application>

</manifest>
